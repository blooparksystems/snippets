<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <!-- css and scripts for the tap navigaton bar -->
    <template id="assets_frontend"
              inherit_id="website.assets_frontend"
              name="Fullscreen form Assets">
      <xpath expr="."
             position="inside">
        <link rel="stylesheet"
              type="text/css"
              href="/snippet_fullscreen_form/static/src/css/main.css"/>
        <script src="/snippet_fullscreen_form/static/src/js/modernizr.custom.js"
                type="text/javascript/"/>
        <script src="/snippet_fullscreen_form/static/src/js/selectFx.js"
                type="text/javascript/"/>
        <script src="/snippet_fullscreen_form/static/src/js/fullscreenForm.js"
                type="text/javascript/"/>
        <script src="/snippet_fullscreen_form/static/src/js/fullscreen_injection.js"
                type="text/javascript/"/>
        <script src="/snippet_fullscreen_form/static/src/js/main.js"
                type="text/javascript"/>
      </xpath>
    </template>

    <template id="fullscreen_form"
              inherit_id="website.snippets">
      <xpath expr="//div[@id='snippet_feature']"
             position="inside">
        <div>
          <div class="oe_snippet_thumbnail">
            <img class="oe_snippet_thumbnail_img"
                 src=""/>
            <span class="oe_snippet_thumbnail_title">
              Full Screen Form
            </span>
          </div>
          <section class="oe_snippet_body">
            <div class="container mt16 mb16">
              <div class="row">
                <div class="col-md-12 text-center">
                  <button type="button"
                          id="open_form"
                          class="btn btn-primary"
                          data-toggle="modal"
                          data-target="#myModal">
                    Project Inquiry
                  </button>
                </div>
              </div>

              <!-- Modal with fullscreen form -->
              <div class="modal fade form-modal"
                   id="myModal"
                   tabindex="-1"
                   role="dialog"
                   aria-labelledby="myModalLabel">
                <div class="modal-dialog form-modal-dialog"
                     role="document">
                  <div class="modal-content form-modal-content">
                    <div class="fs-form-wrap"
                         id="fs-form-wrap">
                      <div class="form-modal-header col-md-1">
                        <button type="button"
                                class="btn btn-default btn-close"
                                data-dismiss="modal">x
                        </button>
                      </div>
                      <form id="myform"
                            class="fs-form fs-form-full"
                            method="post"
                            enctype="multipart/form-data"
                            autocomplete="off">
                        <ol class="fs-fields">
                          <li>
                            <div t-attf-class="form-group #{error and 'contact_name' in error and 'has-error' or ''}">
                              <label class="fs-field-label fs-anim-upper"
                                     for="contact_name">
                                What's your name?
                              </label>
                              <input class="fs-anim-lower"
                                     id="q1"
                                     name="q1"
                                     type="text"
                                     placeholder="Dean Moriarty"
                                     required="True"
                                     t-attf-value="#{contact_name or ''}"/>
                            </div>
                          </li>

                          <li>
                            <div name="email_from_container"
                                 t-attf-class="form-group #{error and 'email_from' in error and 'has-error' or ''}">
                              <label class="fs-field-label fs-anim-upper"
                                     for="email_from"
                                     data-info="We won't send you spam, we promise...">
                                What's your email address?
                              </label>
                              <input class="fs-anim-lower"
                                     id="q2"
                                     name="q2"
                                     type="email"
                                     placeholder="dean@road.us"
                                     required="True"
                                     t-attf-value="#{email_from or ''}"/>
                            </div>
                          </li>

                          <li data-input-trigger="">
                            <div t-attf-class="form-group #{error and 'name' in error and 'has-error' or ''}">
                              <label class="fs-field-label fs-anim-upper "
                                     for="description"
                                     data-info="This will help us know what kind of service you need">
                                What's your priority for your new website?
                              </label>
                              <div class="fs-radio-group fs-radio-custom clearfix fs-anim-lower">
                                <span>
                                  <input id="q3b"
                                         name="q3"
                                         type="radio"
                                         value="conversion"
                                         class=""
                                         t-attf-value="#{name or ''}"/>
                                  <label class="radio-conversion ">
                                    Sell as much as possible
                                  </label>
                                </span>
                                <span>
                                  <input id="q3c"
                                         name="q3"
                                         type="radio"
                                         value="social"
                                         class=""
                                         t-attf-value="#{name or ''}"/>
                                  <label class="radio-social ">
                                    Increase conversion rate
                                  </label>
                                </span>
                                <span>
                                  <input id="q3a"
                                         name="q3"
                                         type="radio"
                                         value="mobile"
                                         class=""
                                         t-attf-value="#{name or ''}"/>
                                  <label class="radio-mobile ">
                                    Mobile market
                                  </label>
                                </span>
                              </div>
                            </div>
                          </li>

                          <li>
                            <div t-attf-class="form-group #{error and 'description' in error and 'has-error' or ''}">
                              <label class="fs-field-label fs-anim-upper"
                                     for="q4">
                                Describe how you imagine your new website
                              </label>
                              <textarea class="fs-anim-lower"
                                        id="q4"
                                        name="q4"
                                        placeholder="Describe here">
                                <t t-esc="description or ''"/>
                              </textarea>
                            </div>
                          </li>

                          <li>
                            <div t-attf-class="form-group #{error and 'planned_revenue' in error and 'has-error' or ''}">
                              <label class="fs-field-label fs-anim-upper"
                                     for="planned_revenue">
                                What's your budget?
                              </label>
                              <input class="fs-mark fs-anim-lower"
                                     id="q5"
                                     name="q5"
                                     type="number"
                                     placeholder="1000"
                                     step="100"
                                     min="1000"/>
                            </div>
                          </li>
                        </ol>
                        <!-- /fs-fields -->
                        <div class="form-group">
                          <div class="col-md-12 text-center">
                            <button class="btn btn-primary fs-submit fullscreen_submit"
                                    type="submit">
                              Send Inquiry
                            </button>
                          </div>
                        </div>
                      </form>
                      <!-- /fs-form -->
                    </div>
                    <!-- /fs-form-wrap -->

                  </div>
                </div>
              </div>

            </div>
          </section>
        </div>
      </xpath>
    </template>
  </data>
</openerp>